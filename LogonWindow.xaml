<Window x:Name="Logon_Window" x:Class="Vitta_Testing_Task.LogonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vitta_Testing_Task"
        mc:Ignorable="d"
        Title="Окно входа" Height="250" Width="460">
    <Grid>
        <Label x:Name="labelUserName" Content="Имя пользователя:" HorizontalAlignment="Left" Margin="42,71,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelPassword" Content="Пароль:" HorizontalAlignment="Left" Margin="42,102,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="text_boxUserName" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" VerticalAlignment="Top" Width="258" Margin="161,71,0,0"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="161,102,0,0" VerticalAlignment="Top" Width="258" Height="26"/>
        <Button x:Name="button1" Content="OK" Margin="190,175,0,0" Width="80" VerticalAlignment="Top" HorizontalAlignment="Left" Click="button1_Click"/>

    </Grid>
</Window>
